{
	"extends": [
		"config:recommended",
		":rebaseStalePrs",
		"docker:pinDigests",
		"helpers:pinGitHubActionDigests",
		":configMigration",
		"github>nuxt/renovate-config-nuxt"
	],
	"automerge": true,
	"automergeType": "branch",
	"platformAutomerge": true,
	"lockFileMaintenance": {
		"automerge": true
	},
	"major": {
		"automerge": false
	},
	"addLabels": [
		"renovate"
	],
	"packageRules": [
		{
			"automerge": true,
			"extends": [
				"group:definitelyTyped",
				"group:allNonMajor",
				"group:linters",
				"group:allDigest"
			]
		}
	],
	"prBodyNotes": [
		"{{#if isMajor}}:warning: MAJOR MAJOR MAJOR :warning:{{/if}}"
	]
}
